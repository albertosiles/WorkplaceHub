<div class="container">
  <h1 class="display-4 text-center mb-5 mt-3">Create a New Workspace</h1>
  <%= simple_form_for(@workspace, html: { class: "form" }) do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <div class="form-group">
              <%= f.input :name, label: "Workspace Name", placeholder: "Enter name", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.input :description, label: "Description", placeholder: "Enter description", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.input :price, label: "Price", placeholder: "Enter price", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.input :location, label: "Location", placeholder: "Enter location", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :image, class: "control-label" %>
              <%= f.file_field :image, class: "form-control-file" %>
            </div>
            <div class="text-center">
              <%= f.button :submit, "Create Workspace", class: "btn btn-lg btn-secondary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
