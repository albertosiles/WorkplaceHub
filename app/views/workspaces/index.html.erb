<div class="container">
  <h1 class="display-4 text-center mb-5 mt-3">Welcome to WorkplaceHub</h1>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @workspaces.each_with_index do |workspace, index| %>
      <div class="col">
        <div class="card h-100 border-0 rounded-3 shadow">
          <div class="position-relative">
            <%= link_to workspace_path(workspace) do %>
              <%= image_tag cloudinary_image_url(index), class: "card-img-top rounded-top", alt: "Workspace Image" %>
            <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= workspace.name %></h5>
            <p class="card-text text-muted">Price per day: Â£<%= workspace.price %></p>
            <p class="card-text text-muted">Location: <%= workspace.location %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
