<!-- Bookings section -->
<% if @bookings.any? %>
  <h4 class="mt-5">Bookings:</h4>
  <ul class="list-group">
    <% @bookings.each do |booking| %>
      <li class="list-group-item">
        <p><strong>Start Date:</strong> <%= booking.start_date %></p>
        <p><strong>End Date:</strong> <%= booking.end_date %></p>

        <!-- Additional information about the connected place -->
        <p><strong>Place:</strong> <%= booking.workspace.name %></p>
        <p><strong>Location:</strong> <%= booking.workspace.location %></p>
        <p><strong>Description:</strong> <%= booking.workspace.description %></p>

        <!-- Link to the place -->
        <%= link_to "View Place", workspace_path(booking.workspace), class: "btn btn-primary btn-sm" %>

        <!-- Delete button -->
        <%= button_to "Delete", booking_path(booking), method: :delete, data: { confirm: "Are you sure you want to delete this booking?" }, class: "btn btn-danger btn-sm ml-2" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="mt-4">No bookings for this workspace yet.</p>
<% end %>
<!-- End of Bookings section -->
